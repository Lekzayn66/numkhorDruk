    .info-icon { background: #4a148c; color: #fff; padding: 0.5rem; border-radius: 50%; }
    footer { text-align: center; padding: 1rem; background: #1a237e; color: white; margin-top: 2rem; font-size: 0.9rem; }
    @media (max-width: 768px) { .container { grid-template-columns: 1fr; } }
